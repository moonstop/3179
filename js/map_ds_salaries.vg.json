{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Average salaries for data scientist in each country" },
  "width": 800,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/moonstop/3179/main/js/output.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
    
    "transform": [
      {
        "joinaggregate": [{
          "op": "mean",
          "field": "salary_in_usd",
          "as": "average_salary"
        }],
        "groupby": ["country"]
      },

      {"calculate": "datum.average_salary + 0.0001", "as": "Average Salaries"},

      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
          "url": "https://github.com/moonstop/3179/blob/main/data/ds_salaries.csv"
          },
          "key": "country",
          "fields": ["average salary"]
        }
}],
  "mark" : {"type": "geoshape"},
  "projection": {"type": "equalEarth"},
  "encoding": {
      "color": {
        "field": "average salary",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "average salary", "type": "quantitative"}
      ]
  }
}