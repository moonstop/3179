{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Average salaries for data scientist in each country" },
  "width": 800,
  "height": 450,
  "data": [{
      "url": "data/ds_salaries.csv"
  },
  {
    "name": "counties",
    "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/countries/us-states/TX-48-texas-counties.json",
    "format": {"type": "topojson", "feature": "cb_2015_texas_county_20m"},
    "transform": [
      {
        "type": "formula",
        "as": "fips_code",
        "expr": "toNumber(datum['properties']['GEOID'])"
      },
      {]
  "transform": [
      {
        "aggregate": [{
          "op": "mean",
          "field": "salary_in_usd",
          "as": "average salary"
        }],
        "groupby": ["country"]
      }

  ],

  "mark" : {"type": "geoshape"},
  "projection": {"type": "equalEarth"},
  "encoding": {
      "color": {
        "field": "average salary",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "salary", "type": "quantitative"}
      ]
  }
}